<%= form_for(bot) do |f| %>
  <% if bot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bot.errors.count, "error") %> prohibited this bot from being saved:</h2>

      <ul>
      <% bot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "New York Times", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :query %>
    <%= f.text_field :query, placeholder: "nytimes", class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :count %>
    <%= f.number_field :count, max: 3200, placeholder: "800", class: 'form-control'  %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= f.submit class: 'btn btn-lg bt-default'  %>
  </div>
<% end %>
